      "Resource": [
        "arn:aws:lambda:us-east-1:349928386418:function:cluster-scraper",
        "arn:aws:lambda:us-east-1:349928386418:function:nba-clustering",
        "arn:aws:lambda:us-east-1:349928386418:function:box-score-scraper",
        "arn:aws:lambda:us-east-1:349928386418:function:supervised-learning",
        "arn:aws:lambda:us-east-1:349928386418:function:daily-predictions"
      ]
    }
  ]
